# Entorno de la aplicación
# NODE_ENV: Define el entorno (production, development)
# PORT: Puerto para el servidor web (necesario para Replit)
# LOG_LEVEL: Nivel de los logs (e.g., info, warn, error)
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Modo de Operación
# BACKTEST_MODE: 'true' para simulación/paper trading, 'false' para operaciones en vivo
BACKTEST_MODE=true

# Proveedor de Datos Históricos (para backtesting e indicadores)
# DATA_PROVIDER: Fuente de los datos (actualmente Alpha Vantage)
# ALPHAVANTAGE_KEY: Tu clave de API para Alpha Vantage
DATA_PROVIDER=alphavantage
ALPHAVANTAGE_KEY=YOUR_ALPHAVANTAGE_KEY_HERE

# Credenciales del Broker (para modo LIVE)
# ¡¡IMPORTANTE!! Usa credenciales de tu cuenta DEMO para las pruebas.
IQ_OPTION_EMAIL=your_email@example.com
IQ_OPTION_PASSWORD=your_password

# Notificaciones por Telegram
# TELEGRAM_BOT_TOKEN: El token de tu bot de Telegram
# TELEGRAM_CHAT_ID: El ID del chat donde se enviarán las notificaciones
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID_HERE

# Parámetros de Trading
# DEFAULT_BANKROLL: Capital inicial para los cálculos de riesgo
# MAX_RISK_PCT: Porcentaje máximo del capital a arriesgar por operación (ej. 1.0 para 1%)
# MIN_SIGNAL_SCORE: Puntuación mínima de la señal para considerar una operación (0.0 a 1.0)
DEFAULT_BANKROLL=1000
MAX_RISK_PCT=1.0
MIN_SIGNAL_SCORE=0.7
